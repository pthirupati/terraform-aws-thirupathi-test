pipeline {
    agent any

    environment {
        AWS_CREDENTIALS = credentials('aws_secret_and_access') // Jenkins credentials ID for AWS
        TF_IN_AUTOMATION = 'true' // Specifies that Terraform runs in automation mode
        SLACK_WEBHOOK_URL = credentials('slack-webhook') // Assuming you store your webhook in Jenkins credentials
    }

    parameters {
        string(name: 'TERRAFORM_DIR', description: 'Specify the Terraform directory to run operations in (e.g., ec2, iam, vpc, eip)')
    }

    stages {
        stage('Start Notification') {
            steps {
                script {
                    def message = [
                        text: "Pipeline Notification: *terraform-aws-thirupathi-test_build #${env.BUILD_NUMBER}* has started for Terraform Directory: *${params.TERRAFORM_DIR}*",
                        attachments: [[
                            color: "#36a64f", // Green color for "Started"
                            text: "The Terraform pipeline is starting."
                        ]]
                    ]
                    sh "curl -X POST -H 'Content-type: application/json' --data '${groovy.json.JsonOutput.toJson(message)}' ${SLACK_WEBHOOK_URL}"
                }
            }
        }

        stage('Checkout') {
            steps {
                script {
                    def terraformDir = params.TERRAFORM_DIR
                    if (!terraformDir) {
                        error "TERRAFORM_DIR parameter is required."
                    }
                    slackSend(channel: '#terraform', message: "Checkout stage started for Terraform directory: ${params.TERRAFORM_DIR}.")
                }
                git branch: 'main', url: 'https://github.com/pthirupati/terraform-aws-thirupathi-test.git'
                slackSend(channel: '#terraform', message: "Checkout stage completed for Terraform directory: ${params.TERRAFORM_DIR}.")
            }
        }

        stage('Setup Terraform Backend') {
            steps {
                script {
                    def terraformDir = params.TERRAFORM_DIR
                    if (!terraformDir) {
                        error "TERRAFORM_DIR parameter is required."
                    }

                    // Generate backend.tf with dynamic state path based on TERRAFORM_DIR parameter
                    writeFile file: "${terraformDir}/backend.tf", text: """
terraform {
  backend "s3" {
    bucket         = "terraform-aws-thirupathi-test"
    key            = "${terraformDir}/state/terraform.tfstate"
    region         = "ap-south-1"
    encrypt        = true
  }
}
"""
                    slackSend(channel: '#terraform', message: "Terraform backend setup completed for directory: ${params.TERRAFORM_DIR}.")
                }
            }
        }

        stage('Setup Terraform') {
            steps {
                script {
                    dir("${params.TERRAFORM_DIR}") {
                        sh '''
                        export AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS_USR}
                        export AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS_PSW}
                        terraform init
                        '''
                    }
                    slackSend(channel: '#terraform', message: "Terraform initialized successfully in directory: ${params.TERRAFORM_DIR}.")
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    dir("${params.TERRAFORM_DIR}") {
                        sh '''
                        export AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS_USR}
                        export AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS_PSW}
                        terraform plan -out=tfplan
                        '''
                    }
                    slackSend(channel: '#terraform', message: "Terraform plan completed successfully in directory: ${params.TERRAFORM_DIR}.")
                }
            }
        }

        stage('Approval') {
            steps {
                script {
                    slackSend(channel: '#terraform', message: "Approval required for Terraform apply in directory: ${params.TERRAFORM_DIR}.")
                    input message: 'Do you want to proceed with Terraform Apply?', ok: 'Proceed'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    dir("${params.TERRAFORM_DIR}") {
                        sh '''
                        export AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS_USR}
                        export AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS_PSW}
                        terraform apply -auto-approve tfplan
                        '''
                    }
                    slackSend(channel: '#terraform', message: "Terraform apply completed successfully in directory: ${params.TERRAFORM_DIR}.")
                }
            }
        }
    }

    post {
        success {
            script {
                def stateFilePath = "s3://terraform-aws-thirupathi-test/${params.TERRAFORM_DIR}/state/terraform.tfstate"
                slackSend(channel: '#terraform', message: "Pipeline succeeded for Terraform directory: ${params.TERRAFORM_DIR}. State file path: ${stateFilePath}.")
            }
            echo 'Pipeline succeeded!'
        }
        failure {
            script {
                slackSend(channel: '#terraform', message: "Pipeline failed for Terraform directory: ${params.TERRAFORM_DIR}.")
            }
            echo 'Pipeline failed.'
        }
        aborted {
            script {
                slackSend(channel: '#terraform', message: "Pipeline was aborted for Terraform directory: ${params.TERRAFORM_DIR}.")
            }
        }
        always {
            cleanWs()
        }
    }
}
